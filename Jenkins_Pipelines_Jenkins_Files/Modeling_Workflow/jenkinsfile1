pipeline {
    
    agent any // defines the worker node (slave)
    environment {
        RELEASE='20.04' // environment variables you can declare in the environment block.
    }

    stages {

        stage('Build') {
            agent any
            environment {
                LOG_LEVEL='VERBOSE'
            }
            steps {
                // echo "Building release ${RELEASE} with log level ${LOG_LEVEL}..."
                sh '''
                   echo "Building release ${RELEASE} with log level ${LOG_LEVEL}..." 
                '''
            }
        }
        
        stage('Test') {
            steps {
                echo "Testing. I can see release ${RELEASE}, but not log level ${LOG_LEVEL}" // Log Level environment var is defined in above stage, not a pipeline level environment variable
            }
        }
    }
} 